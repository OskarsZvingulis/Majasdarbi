import java.util.Random;
import java.util.Scanner;

public class GuessMyNumber {
    public static void main(String[] args) {
        
        Random rnd = new Random();
        Scanner scan = new Scanner(System.in);

        int randomInt = rnd.nextInt(10);

        int number;

        System.out.println("Guess My Number (0-10)");

        number = scan.nextInt();

        if (number == randomInt) {

            System.out.println("Great that's my number!!!");

        } else if (number > randomInt) {

            System.out.println("Try smaller number!!!");
        } else {
            System.out.println("Try bigger number!!!");

        }
    }
}
