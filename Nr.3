package testing;

public class timer {

    static Thread tr = new Thread();

    public static void main(String[] args) {
        try {
            for (int t = 5; t >= 0; t--) {
                tr.sleep(1000);
                System.out.println(t);

                if (t == 0) {
                    System.out.println("Boom!!!");
                }
            }
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
